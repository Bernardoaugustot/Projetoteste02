<div>
    <h4>Seller</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @* dt >> para mostrar o nome do campo e
                dd para mostrar o valor do campo*@
            @Html.DisplayNameFor(modelo => modelo.Name)
        </dt>
        <dd>
            @Html.DisplayFor(Model => Model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(modelo => modelo.Email)
